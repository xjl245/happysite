extends layout

block content
    .container
        .page-header
            .navbar.my-navbar-default.navbar-fixed-top(role='navigation')
                .container
                    .navbar-header
                        button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                    .collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href='/')
                                    span(style='color:black').glyphicon 首页
                            li
                                a(href='/recommend')
                                    span(style='color:black').glyphicon 每日推荐
                            li
                                a
                                    span(data-toggle='modal' data-target='#mymodalshare' style='color:black').glyphicon 影片共享
                        ul.nav.navbar-nav.navbar-right
                            li
                                a
                                    span(data-toggle='modal' data-target='#mymodalfb' style='color:black').glyphicon 网站反馈
             .row
                form.form-horizontal(action="search.js" method="get" role="form")
                    .input-group.col-md-8.col-md-offset-2
                        input.form-control(type="text" autofocus="autofocus")
                        .input-group-btn
                            button.btn.btn-primary(type="submit") 搜索
            .row(style='text-align:center;')
                h2(style='margin-top: 20px; font-size: 1.2em;') 致力于打造令人舒心的电影网站
        .row
            .col-md-5.col-md-offset-1
                .window1
                    div(style='line-height: 30px;vertical-align: top;padding: 2px 9px 0')
                        span 最新影片
                    div(style='padding: 18px 10px;')
                        p
                            a(href='/' style='color:black') 金刚：骷髅岛
                            label(style='float:right') 5.20
                        p
                            a(href='/' style='color:black') 天际浩劫
                            label(style='float:right') 5.20
                        p
