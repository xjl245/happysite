        #mymodalfb.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        button.close(data-dismiss='modal' aria-label='close')
                            span(aria-hidden='true') x
                        h4#myModalLabel.modal-title 问题反馈
                    .modal-body
                        .form-group
                            label.control-label 联系方式:
                            input.form-control(type='text' placeholder="请留下您的邮箱，以便我们及时回复您。")
                        .form-group
                            label.control-label 反馈内容:
                            textarea.form-control(rows='8' placeholder="本站是个人开发，可能会有一些bug没有发现，欢迎您在使用过程中提出宝贵的建议，感谢对本站的支持。(必填)")
                    .modal-footer
                        button.btn.btn-default(data-dismiss='modal') 关闭
                        button.btn.btn-primary 保存
        #mymodalshare.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabelshare')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        button.close(data-dismiss='modal' aria-label='close')
                            span(aria-hidden='true') x
                        h4#myModalLabelshare.modal-title 影片共享
                    .modal-body
                        .form-group
                            label.control-label 影片名称:
                            input.form-control(type='text' placeholder="尽量写全名哦(小电影的不要)。必填")
                        .form-group
                            label.control-label 影片链接:
                            input.form-control(type='text' placeholder="如果是网盘，链接和密码用分号分割。必填")
                    .modal-footer
                        button.btn.btn-default(data-dismiss='modal') 关闭
                        button.btn.btn-primary 保存
        #footer
            p.text-center 123456@copyright


